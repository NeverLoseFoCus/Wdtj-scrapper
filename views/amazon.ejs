<%- include("./baseHtml.ejs")  %> 


<section class="amazon-container">
    <h1 class="amazon-header">amazon <i class="fa fa-amazon" style="font-size:40px;color:rgb(95, 95, 95)"></i></h1>
    <form action="/amazon/product/response" method="post">
        <label for="channel-id" class="label">Enter a product id <p style="font-size: 15px; display: inline-block; color: rgb(116, 116, 116);">*see product data*</p></label>
        <div class="input-container no-margin">
            <input class="url-input" type="text" id="channel-id" name="amazonProductId" placeholder="Example/B09JQWSQK7..." required>
            <button class="url-submit-button">Submit</button>
        </div>
    </form>

    <form action="/amazon/product/reviews/response" method="post">
        <label for="channel-id" class="label">Enter a product id <p style="font-size: 15px; display: inline-block; color: rgb(116, 116, 116);">*see product reviews data*</p></label>
        <div class="input-container no-margin">
            <input class="url-input" type="text" id="channel-id" name="amazonProductId" placeholder="Example/B09JQWSQK7..." required>
            <button class="url-submit-button">Submit</button>
        </div>
    </form>

    <form action="/amazon/store/response" method="post">
        <label for="channel-id" class="label">Enter store data <p style="font-size: 15px; display: inline-block; color: rgb(116, 116, 116);">*see store data*</p></label>
        <div class="input-container no-margin multiple-inputs">
            <input class="url-input " type="text" id="channel-id" name="amazonStoreName" placeholder="Store Name..." >
            <input class="url-input " type="text" id="channel-id" name="amazonStoreId" placeholder="Store Id..." >
            <button class="url-submit-button">Submit</button>
        </div>
    </form>
</section>