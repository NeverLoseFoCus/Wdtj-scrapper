<%- include("./baseHtml.ejs")  %> 

<section class="youtube-container">
    <h1 class="youtube-header">Youtube <i class="fa fa-youtube-play" style="font-size:48px;color:red"></i></h1>
    <form action="/youtube/channelid/response" method="post">
        <label for="channel-id" class="label">Enter a channel id <p style="font-size: 15px; display: inline-block; color: rgb(116, 116, 116);">*see channel data*</p></label>
        <div class="input-container no-margin ">
            <input class="url-input" type="text" id="channel-id" name="youtubeChannelId" placeholder="Type here..." required>
            <button class="url-submit-button ">Submit</button>
        </div>
    </form>
    <form action="/youtube/channelid/playlists/response" method="post">
        <label for="channel-id" class="label">Enter a channel id <p style="font-size: 15px; display: inline-block; color: rgb(116, 116, 116);">*see channel playlists data*</p></label>
        <div class="input-container no-margin ">
            <input class="url-input" type="text" id="channel-id" name="youtubeChannelId" placeholder="Type here..." required>
            <button class="url-submit-button ">Submit</button>
        </div>
    </form>
    <form action="/youtube/channelid/activities/response" method="post">
        <label for="channel-id" class="label">Enter a channel id <p style="font-size: 15px; display: inline-block; color: rgb(116, 116, 116);">*see channel last activities data*</p></label>
        <div class="input-container no-margin ">
            <input class="url-input" type="text" id="channel-id" name="youtubeChannelId" placeholder="Type here..." required>
            <button class="url-submit-button ">Submit</button>
        </div>
    </form>
    <form action="/youtube/videoid/response" method="post">
        <label for="channel-id" class="label">Enter a video id <p style="font-size: 15px; display: inline-block; color: rgb(116, 116, 116);">*see video data*</p></label>
        <div class="input-container no-margin ">
            <input class="url-input" type="text" id="channel-id" name="youtubeVideoId" placeholder="Type here..." required>
            <button class="url-submit-button ">Submit</button>
        </div>
    </form>
    <form action="/youtube/videoid/comments/response" method="post">
        <label for="channel-id" class="label">Enter a video id <p style="font-size: 15px; display: inline-block; color: rgb(116, 116, 116);">*see video top comments data*</p></label>
        <div class="input-container no-margin ">
            <input class="url-input" type="text" id="channel-id" name="youtubeVideoId" placeholder="Type here..." required>
            <button class="url-submit-button ">Submit</button>
        </div>
    </form>
</section>